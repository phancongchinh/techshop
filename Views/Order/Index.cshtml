@model System.Collections.Generic.IEnumerable<Techshop.Models.Entities.Order>

@{
    ViewBag.Title = "Order";
    Layout = "_Layout";
}

<h2>My orders</h2>

<div class="container container-fluid">

    <div class="row">
        <table class="table">
            <thead>
            <tr>
                <td class="col-2">Order No.</td>
                <td class="col-3">Created at</td>
                <td class="col-3">Status</td>
                <td class="col-2">Total price</td>
                <td class="col-2"></td>
            </tr>
            </thead>
            <tbody>

            @foreach (var i in Model)
            {
                <tr>
                    <td>@i.Id</td>
                    <td>@i.CreatedAt</td>
                    <td>@i.Status</td>
                    <td>@i.OrderItems.Sum(x => x.Price)</td>
                    <td class="col-3">
                        <a href="/purchase/info?purchaseId=@i.Id">Details</a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>