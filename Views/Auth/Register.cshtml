@model Techshop.Models.ViewModels.RegisterVm

@{
    ViewBag.Title = "Register";
    Layout = "_Layout";
}

<h2>Register</h2>

<div class="container container-fluid">

    <div class="row mt-4">
        <div class="col-4">
            <form asp-action="Register" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="Username">Tên đăng nhập</label>
                    <input type="text" asp-for="Username" class="form-control" required>
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="FullName">Họ và tên</label>
                    <input type="text" asp-for="FullName" class="form-control" required>
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Password">Mật khẩu</label>
                    <input type="password" asp-for="Password" class="form-control" required>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="RetypePassword">Nhập lại mật khẩu</label>
                    <input type="password" asp-for="RetypePassword" class="form-control" required>
                    <span asp-validation-for="RetypePassword" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Phone">Điện thoại</label>
                    <input type="text" asp-for="Phone" class="form-control" required>
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Email">Email</label>
                    <input type="text" asp-for="Email" class="form-control" required>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Address">Địa chỉ</label>
                    <input type="text" asp-for="Address" class="form-control" required>
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
                
                <div class="form-group mt-3">
                    <button type="submit" class="btn btn-primary">Register</button>
                </div>
            </form>
        </div>
    </div>

</div>