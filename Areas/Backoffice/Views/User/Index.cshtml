@model System.Collections.Generic.List<Techshop.Models.Entities.User>

@{
    ViewBag.Title = "Backoffice";
    Layout = "_Layout";
}

<h2>User List</h2>

<div class="container container-fluid">
    <div class="row">
        <table class="table">
            <thead>
            <tr>
                <td class="col-2">ID No.</td>
                <td class="col-3">Username</td>
                <td class="col-3">Fullname</td>
                <td class="col-2">Role</td>
                <td class="col-2"></td>
            </tr>
            </thead>
            <tbody>

            @foreach (var i in Model)
            {
                <tr>
                    <td>@i.Id</td>
                    <td>@i.Username</td>
                    <td>@i.FullName</td>
                    <td>@i.Role.Name</td>
                    <td class="col-3">
                        <a class="btn btn-link" asp-area="Backoffice" asp-controller="User" asp-action="Info">Details</a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>