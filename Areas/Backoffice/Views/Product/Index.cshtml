@model System.Collections.Generic.List<Techshop.Models.Entities.Product>

@{
    ViewBag.Title = "Backoffice";
    Layout = "_BackofficeLayout";
}

<h2>Product List</h2>

<div>

    <div class="mt-5 text-danger d-flex align-items-center" style="height: 40px">
        <div>
            @{
                if (TempData["Message"] != null)
                {
                    @TempData["Message"]
                }
            }
        </div>

        <div class="ms-auto">
            <a class="btn btn-link" asp-area="Backoffice" asp-controller="Product" asp-action="Create">Add new product</a>
        </div>
    </div>

    <div class="row">
        <table class="table">
            <thead>
            <tr>
                <td class="col-1">No.</td>
                <td class="col-1">Image</td>
                <td class="col-1">Brand</td>
                <td class="col-2">Model</td>
                <td class="col-1">Price</td>
                <td class="col-1">Quantity</td>
                <td class="col-1"></td>
            </tr>
            </thead>
            <tbody>

            @foreach (var i in Model)
            {
                <tr>
                    <td>@i.Id</td>
                    <td>
                        <img src="/uploads/images/@Url.Content(i.Images.FirstOrDefault()?.Path)"
                             style="width: 40px"
                             alt="#">
                    </td>
                    <td>@i.Brand</td>
                    <td>@i.Model</td>
                    <td>@i.Price</td>
                    <td>@i.Quantity</td>
                    <td>
                        <a class="btn btn-link"
                           asp-area="Backoffice"
                           asp-controller="Product"
                           asp-action="Update"
                           asp-route-id="@i.Id">
                            Details
                        </a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>