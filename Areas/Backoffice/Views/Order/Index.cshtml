@model System.Collections.Generic.List<Techshop.Models.Entities.Order>

@{
    ViewBag.Title = "Backoffice";
    Layout = "_BackofficeLayout";
}

<h2>Order List</h2>

<div class="row">
    <table class="table">
        <thead>
        <tr>
            <td class="col-1">Order No.</td>
            <td class="col-2">Created at</td>
            <td class="col-2">Customer's username</td>
            <td class="col-2">Total price</td>
            <td class="col-2">Status</td>
            <td class="col-2">Completed at</td>
            <td class="col-1"></td>
        </tr>
        </thead>
        <tbody>

        @foreach (var i in Model)
        {
            <tr>
                <td>@i.Id</td>
                <td>@i.CreatedAt</td>
                <td>@i.User.Username</td>
                <td>@($"{i.OrderItems.Sum(x => x.Price):C0}")</td>
                <td>@i.Status</td>
                <td>@i.CompletedAt</td>
                <td class="col-3">
                    <a href="/Backoffice/Order/@i.Id">Details</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>