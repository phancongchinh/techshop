@model System.Collections.Generic.List<Techshop.Models.Entities.Order>

@{
    ViewBag.Title = "Backoffice";
    Layout = "_BackofficeLayout";
}

<h2>Order List</h2>

<div class="row">
    <table class="table">
        <thead>
        <tr>
            <td class="col-2">Order No.</td>
            <td class="col-2">Customer's username.</td>
            <td class="col-2">Created at</td>
            <td class="col-2">Status</td>
            <td class="col-2">Completed at</td>
        </tr>
        </thead>
        <tbody>

        @foreach (var i in Model)
        {
            <tr>
                <td>@i.Id</td>
                <td>@i.User.Username</td>
                <td>@i.CreatedAt</td>
                <td>@i.Status</td>
                <td>@i.CompletedAt</td>
                <td class="col-3" hidden>
                    <a class="btn btn-link" asp-area="Backoffice" asp-controller="Order" asp-action="OrderList">Details</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>